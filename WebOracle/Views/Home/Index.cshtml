
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>首页</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <div id="app" class="container">
        <div class="container text-center">
            <div class="row">
                <label class="col-form-label col-2">姓名：</label> 
                <input type="text" style="margin-left:16px;" v-model="name" class="form-control col-2">
            </div>
            <br />
            <div class="row">
                <div class="col-2">
                    <label class="col-form-label">开始时间：</label>
                </div>
                <div class="col-3">
                    <input type="date" v-model="StartTime" class="form-control">
                </div>
                <div class="col-2">
                    <label class="col-form-label">结束时间：</label>
                </div>
                <div class="col-3">
                    <input type="date" v-model="EndTime" class="form-control">
                </div>
                <div class="col-2">
                    <button class="btn btn-primary" @@click="Reset">重置</button>
                    <button class="btn btn-primary" @@click="Select">查询</button>
                </div>
            </div>
        </div>
        <button class="btn btn-light row offset-11" @@click="Insert">添加</button>
        <table class="table table-hover table-bordered text-center">
            <thead class="thead-dark">
                <tr>
                    <th>序号</th>
                    <th>姓名</th>
                    <th>时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(item, index) in items" :key="item.id">
                    <td hidden> <input :id="['date_time_'+index]" :value="dateFormat(item.time)" :data-id="dateFormat(item.time)" /></td>
                    <td>{{index+1}}</td>
                    <td>{{item.name}}</td>
                    <td>{{dateFormat(item.time)}}</td>
                    <td>
                        <button class="btn btn-link" @@click="Delete(item.id)">删除</button>
                        <button class="btn btn-link" @@click="Update(item.id)">修改</button>
                    </td>

                </tr>
            </tbody>
        </table>
        @*模态框*@
        <div id="myModal" class="modal fade" data-backdrop="static">
            <div id="Mydialog" class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <form class="needs-validation" novalidate>
                        <!-- 模态框头部 -->
                        <div class="modal-header">
                            <h5 class="modal-title">修改信息</h5>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <input v-model="MyTest.id" hidden />
                        </div>
                        <!-- 模态框主体 -->
                        <div class="modal-body">
                            <div class="container">
                                <div class="row justify-content-md-center form-group">
                                    <label class="cols-sm-2 col-form-label">姓名：</label>
                                    <div class="col-sm-8">
                                        <input type="text" v-model="MyTest.name" class="form-control" required>
                                    </div>
                                </div>
                                <div class="row justify-content-md-center form-group">
                                    <label class="cols-sm-2 col-form-label">时间：</label>
                                    <div class="col-sm-8">
                                        <input type="date" v-model="MyTest.time" class="form-control" required>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 模态框底部 -->
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="Save" @@click="Save">修改</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/vue.min.js"></script>
    <script src="~/Scripts/vue-resource.min.js"></script>
    <script src="~/MyScripts/Home_Index.min.js"></script>
</body>
</html>
